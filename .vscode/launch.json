{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "VuePress dev",
            "program": "/usr/local/bin/vuepress",
            "cwd": "${workspaceFolder}/vuepress",
            "env": {
                "DEBUG": "nuxt:*"
            },
            "args": [
                "dev"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "VuePress build",
            "program": "/usr/local/bin/vuepress",
            "cwd": "${workspaceFolder}/vuepress",
            "args": [
                "build"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nuxt dev",
            "program": "${workspaceFolder}/node_modules/.bin/nuxt",
            "env": {
                "DEBUG": "nuxt:*"
            },
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "doctools",
            "program": "/usr/local/bin/doctools",
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nuxt generate",
            "program": "${workspaceFolder}/node_modules/.bin/nuxt",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "nuxt:*"
            },
            "args": [
                "generate"
            ]
        }
    ]
}